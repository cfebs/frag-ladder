<h3>Members</h3>
<table class="grid">
    <thead>
    <tr>
        <th>Name</th>
        <th>Matches</th>
        <th>+</th>
        <th>-</th>
        <th>Win %</th>
    </tr>
    </thead>
    <tbody>
    <% @team.members.each do |member| %>
    <tr>
        <td><%= link_to member.alias, team_member_path(@team, member) %></td>
        <td><%= member.matches.length %></td>
        <td><%= member.plus %></td>
        <td><%= member.minus %></td>
        <td><%= member.win_percentage %></td>
    </tr>
    <% end %>
    </tbody>
</table>

<h3>Matches</h3>
<table class="grid">
    <thead>
    <tr>
        <th>W/L</th>
        <th>Date</th>
        <th>Phase</th>
        <th>Home</th>
        <th>Away</th>
        <th>+</th>
        <th>-</th>
        <th>=</th>
    </tr>
    </thead>
    <tbody>
    <% @team.all_matches.each do |match| %>
    <tr>
        <td><%= @team.win_or_loss(match) %></td>
        <td><%= match.created_at %></td>
        <td><%= match.phase %></td>
        <td><%= match.home_team.tag %></td>
        <td><%= match.away_team.tag %></td>
        <td><%= p = @team.get_plus match %></td>
        <td><%= m = @team.get_minus match %></td>
        <td><%= p - m %></td>
    </tr>
    <% end %>
    </tbody>
</table>
