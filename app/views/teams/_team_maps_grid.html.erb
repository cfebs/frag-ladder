<table class="grid">
    <thead>
    <tr>
        <th>Map</th>
        <th>Wins</th>
        <th>Losses</th>
        <th>Ties</th>
        <th>Total</th>
        <th>Win%</th>
        <th>+</th>
        <th>-</th>
        <th>Total%</th>
    </tr>
    </thead>
    <tbody>
    <% Map.all.each do |map| %>
    <tr>
        <td><%= map.name %></td>
        <td><%= wins = @team.map_wins(map).length %></td>
        <td><%= @team.map_losses(map).length %></td>
        <td><%= @team.map_ties(map).length %></td>
        <td><%= all = @team.map_all(map).length %></td>
        <td><%= percentage(wins, @team.all_matches.length) %></td>
        <td><%= p = @team.get_plus_map map %></td>
        <td><%= m = @team.get_minus_map map %></td>
        <td><%= percentage(all, @team.all_matches.length) %></td>
    </tr>
    <% end %>
    </tbody>
</table>
