<h2><%= @team.name %> - <%= link_to 'edit', edit_team_path(@team)%></h2>

<p><%= link_to "New Member", new_team_member_path(@team) %></p>
<p><%= link_to "New Match", new_season_match_path(@season) %></p>

<h3>Grid</h3>
<%= render 'grid' %>

<p>
<% @team.members.each do |member| %>
    <%= member.alias %> <br>
<% end %>
</p>
<hr>

<h3>Matches</h3>

<% @team.all_matches.each do |m| %>
    <%= link_to "#{m.home_team.name} vs. #{m.away_team.name}", match_path(m) %><br>
<% end %>
