<div class="clickable button add_player">
    Add Player
</div>

<table class="player_table">
    <tr>
        <th>Player</th>
        <th>Kills</th>
        <th>Deaths</th>
        <th>Points</th>
    <tr>
    <tr class="player_row">
        <td>
            <%= collection_select 'match_member_stats[member_id]', '', team.members.all, :id, :alias, :prompt => true %>
            <% select('match_member_stats[member_id]', '', team.members.all.collect { |m| [m.alias, m.id] }) %>
        </td>

        <td>
            <%= text_field :match_member_stats, :kills, :size => 3 %>
        </td>
        <td>
            <%= text_field :match_member_stats, :deaths, :size => 3 %>
        </td>
        <td>
            <%= text_field :match_member_stats, :points, :size => 3 %>
        </td>
    </tr>
</table>



